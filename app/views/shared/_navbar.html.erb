<div class="navbar navbar-expand-sm navbar-light navbar-lewagon shadow-sm mb-5">
  <%= link_to root_path, class: "navbar-brand" do %>
    <span>Trendsetters</span>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <% if user_signed_in? %>
    <div class="">
      <%= simple_form_for :search, url: results_path, method: "GET", html: { class: 'form-inline' } do |f| %>
        <%= f.input :query, input_html: { value: "", placeholder:"Search by talent or account..."}, label: false %>
        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%#= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%#= link_to "Action", "#", class: "dropdown-item" %>
            <%#= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to t('navbar.btn-edit-users'), users_path, class:'dropdown-item' if current_user.admin %>
            <%= link_to t('navbar.btn-new'), new_talent_path, class:'dropdown-item' %>
            <%= link_to t('navbar.btn-interests'), interests_path, class: "dropdown-item"  %>
            <%= link_to t('navbar.btn-prices'), prices_path, class: "dropdown-item"  %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
